# switch to the prerelease channel
auto-update-channel = tip

# appearance
bold-is-bright = true
macos-titlebar-style = hidden
theme = /Users/john.allen/.local/share/nvim/lazy/tokyonight.nvim/extras/ghostty/tokyonight_moon
window-colorspace = display-p3
window-padding-x = 4

# shader
custom-shader = ./cursor-shader.glsl

# font-family = "JetBrainsMono Nerd Font Mono" # this is built-in default
font-family = "FiraCode Nerd Font Mono"
font-size = 15.5
font-thicken = true

# keymaps
keybind = clear

keybind = super+k=toggle_command_palette
keybind = global:cmd+`=toggle_quick_terminal

keybind = super+shift+r=reload_config
keybind = super+shift+i=inspector:toggle

keybind = super+c=copy_to_clipboard
keybind = super+f=start_search
# don't use escape for `end_search` as it conflicts with nvim ü§¶‚Äç‚ôÇÔ∏è
keybind = super+shift+f=end_search
# keybind = super+shift+f=write_scrollback_file:paste
keybind = super+n=new_window
keybind = super+q=close_surface
keybind = super+v=paste_from_clipboard
keybind = super+w=close_surface

keybind = super+equal=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+zero=reset_font_size

keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down
keybind = super+ctrl+h=goto_split:left
keybind = super+ctrl+j=goto_split:bottom
keybind = super+ctrl+k=goto_split:top
keybind = super+ctrl+l=goto_split:right
keybind = super+ctrl+alt+h=resize_split:left,100
keybind = super+ctrl+alt+j=resize_split:down,100
keybind = super+ctrl+alt+k=resize_split:up,100
keybind = super+ctrl+alt+l=resize_split:right,100
keybind = super+ctrl+equal=equalize_splits

# for claude code üôÑ
keybind = shift+enter=text:\n

# other features
confirm-close-surface = false
copy-on-select = clipboard
quit-after-last-window-closed = true
# allow cursor to be a block: https://ghostty.org/docs/config/reference#cursor-style
shell-integration-features = no-cursor
clipboard-paste-protection = false
